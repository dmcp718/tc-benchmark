<?xml version="1.0" encoding="utf-8"?>
<installer-gui-script minSpecVersion="1">
    <title>tframetest 3025.1.1</title>
    <organization>com.tuxera.tframetest</organization>
    <domains enable_localSystem="true"/>
    <options customize="never" require-scripts="true" rootVolumeOnly="true" />

    <!-- Background and welcome text -->
    <welcome file="welcome.txt" mime-type="text/plain"/>
    <license file="LICENSE.txt" mime-type="text/plain"/>
    <readme file="readme.txt" mime-type="text/plain"/>

    <!-- Installation check -->
    <installation-check script="pm_install_check();"/>

    <script>
    <![CDATA[
    function pm_install_check() {
        if(!(system.compareVersions(system.version.ProductVersion, '10.13') >= 0)) {
            my.result.title = 'Unable to install';
            my.result.message = 'tframetest requires macOS 10.13 (High Sierra) or later.';
            my.result.type = 'Fatal';
            return false;
        }
        return true;
    }
    ]]>
    </script>

    <choices-outline>
        <line choice="default">
            <line choice="com.tuxera.tframetest.pkg"/>
        </line>
    </choices-outline>

    <choice id="default"/>
    <choice id="com.tuxera.tframetest.pkg" visible="false">
        <pkg-ref id="com.tuxera.tframetest"/>
    </choice>

    <pkg-ref id="com.tuxera.tframetest" version="3025.1.1" onConclusion="none">tframetest.pkg</pkg-ref>

</installer-gui-script>
